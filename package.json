{
  "name": "frame-design-system",
  "version": "0.1.0",
  "description": "Open source design system for financial products and digital experiences.",
  "homepage": "https://github.com/parasutcom/frame-design-system#readme",
  "author": "",
  "license": "ISC",
  "keywords": [
    "frame",
    "frame design system",
    "design system"
  ],
  "bugs": {
    "url": "https://github.com/parasutcom/frame-design-system/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/parasutcom/frame-design-system.git"
  },
  "main": "index.js",
  "scripts": {
    "format": "prettier --write '**/*.{js,md,scss}'",
    "lint:scss": "stylelint '**/*.scss'",
    "fix": "npm run format --fix; npm run lint:scss --fix",
    "start": "gulp"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.scss": [
      "prettier --write",
      "stylelint"
    ]
  },
  "devDependencies": {
    "browser-sync": "^2.27.10",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "husky": "^4.3.8",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.0",
    "sass": "^1.49.7",
    "stylelint": "^14.3.0",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-no-unsupported-browser-features": "^5.0.3",
    "stylelint-prettier": "^2.0.0"
  }
}
