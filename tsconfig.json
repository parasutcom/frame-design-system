{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es2016", "dom"],
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true,
        "rules": {
          "no-unknown-tag-name": "off",
          "no-missing-import": "off"
        }
      }
    ]
  },
  "include": ["src/**/*.ts"]
}